<Window x:Class="BinaryTree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinaryTree"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="InputText" HorizontalAlignment="Left" Margin="130,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        <TextBox x:Name="OutputText" HorizontalAlignment="Right" Margin="0,4,90,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        <Button Content="确认" HorizontalAlignment="Left" Margin="355,4,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Canvas x:Name="TreeCanvas" Background="Gray" Margin="5,30,5,5"/>
        <TextBlock HorizontalAlignment="Left" Margin="85,7,0,0" TextWrapping="Wrap" Text="Input" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,7,325,0" TextWrapping="Wrap" Text="Output" VerticalAlignment="Top"/>
    </Grid>
</Window>